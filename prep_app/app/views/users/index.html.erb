<div class="row">
  <div class="small-12 medium-12 large-12 columns all-title">
    <h1>Users</h1>
  </div>
</div>

<% @ordered_users = @users.sort_by { |obj| obj.second_name } %>
<% @ordered_users.each do |user| %>
<div class="row all-users">
  <div class="small-0 medium-4 large-4 columns teacher-pic">
    <%= image_tag user.image %>
  </div>
  <div class="small-12 medium-8 large-8 columns user-desc">
    <div class="all-user-name">
      <h1><%= user.first_name + " " + user.second_name %></h1>
      <% if user.role == "Student" %>
        <%= link_to 'Edit User', edit_user_path(user) %>
      <% end %>
    </div>
    <div class="all-user-role">
      <h4><%= user.role %></h4>
    </div>
  </div>
</div>
<% end %>