<div class="row resource">
  <div class="small-4 large-4 columns resource-pic">
    <%= link_to @resource.file.url do %>
      <%= image_tag @resource.file.thumb.url %>
    <% end %>
  </div>
  <div class="small-8 large-8 columns resource-info">
    <div class="resource-name">
      <h2><%= @resource.name %></h2>
      <%= link_to 'Edit', edit_resource_path(@resource) %>
    </div>
    <div class="resource-cohort">
      <h3><%= @resource.cohort.name %></h3>
    </div>
    <div class="resource-description">
      <p><%= @resource.description %></p>
    </div>
  </div>
</div>

<%= render partial: 'comments/form', locals: { commentable: @resource } %>
<%= render partial: 'comments/comment', collection: @comments, locals: { commentable: @resource } %>

