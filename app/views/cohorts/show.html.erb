<div class="row cohort-info">
  <div class="small-0 medium-4 large-4 columns teacher-pic">
    <%= image_tag @cohort.teacher.try(:image) %>
  </div>
  <div class="small-12 medium-8 large-8 columns cohort-desc">
    <div class="cohort-name">
      <h1><%= @cohort.name %></h1>
      <%= link_to 'Edit Class', edit_cohort_path(@cohort) %>
    </div>
    <div class="cohort-teacher">
      <h4><%= "Teacher: " + @cohort.teacher.try(:first_name) + " " + @cohort.teacher.try(:second_name) %></h4>
    </div>
    <div class="cohort-tools">
      <%= link_to 'Add New Resource', new_resource_path %>
    </div>
  </div>
</div>

<div class="cohort-resources">
  <%= render @cohort.resources %>
</div>