<h1><%= @resource.name %></h1>

<ul>
  <li>
    <%= link_to @resource.file.url do %>
        <%= image_tag @resource.file.url %>
      <% end %>
  </li>
</ul>

<ul>
  <li><%= @resource.name  %></li>
  <li><%= @resource.cohort.name %></li>
</ul>

<ul>
  <li><%= @resource.description %></li>
</ul>

<ul>
  <li><%= link_to 'Edit', edit_resource_path(@resource) %></li>
  <li><%= link_to 'All Resources', resources_path %></li>
</ul>

<%= render partial: 'comments/form', locals: { commentable: @resource } %>
<%= render partial: 'comments/comment', collection: @comments, locals: { commentable: @resource } %>

