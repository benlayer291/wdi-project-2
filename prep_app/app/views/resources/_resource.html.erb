<div class="small-12 medium-4 large-4 columns resource-tile">
  <div class="resource-title">
    <%= resource.name %>
  </div>
  <div class="resource-time">
    <%= time_ago_in_words(resource.created_at) + " ago" %>
  </div>
  <div class="resource-pic">
  <%= link_to resource do %>
    <%= image_tag resource.file.thumb.url %>
  <% end %>
  </div>
</div>
