<div class="row">
  <div class="small-4 columns">
    <ul>
      <li><%= image_tag @user.image  %></li>
    </ul>
  </div>
  <div class="small-8 columns">
    <ul>
      <li><%= @user.first_name + " " + @user.second_name %></li>
      <li><%= @user.role %></li>
    </ul>
    <ul>
      <% @user_cohorts = @user.cohorts.sort_by { |obj| obj.year_group } %>
      <% @user_cohorts.each do |cohort| %>
        <li><%= cohort.name %></li>
      <% end %>
    </ul>
  </div>
</div>


<h1><%= @user.first_name + " " + @user.second_name %></h1>

<div class="user-info">
  <ul>
    <li><%= image_tag @user.image  %></li>
  </ul>

  <ul>
    <li><%= @user.first_name + " " + @user.second_name %></li>
    <li><%= @user.role %></li>
  </ul>

  <ul>
    <h2>Classes</h2>
    <% @user_cohorts = @user.cohorts.sort_by { |obj| obj.year_group } %>
    <% @user_cohorts.each do |cohort| %>
      <li><%= cohort.name %></li>
    <% end %>
  </ul>

  <ul>
    <li><%= link_to "All Users", users_path %></li>
    <li><%= link_to 'All Classes', cohorts_path %></li>
    <li><%= link_to 'All Resources', resources_path %></li>
  </ul>
</div>

<div class="user-resources">
  <h2>My Resources</h2>
  <% @user_cohorts = @user.cohorts.sort_by { |obj| obj.year_group } %>
  <% @user_cohorts.each do |cohort| %>
    <ul>
      <li><%= cohort.name %></li>
    </ul>

    <% cohort.resources.each do |resource| %>
      <ul>
        <li>
          <%= link_to resource do %>
            <%= image_tag resource.file.thumb.url %>
          <% end %>
        </li>
      </ul>

      <ul>
        <li><%= resource.name  %></li>
      </ul>
    <% end %>

  <% end %>
</div>