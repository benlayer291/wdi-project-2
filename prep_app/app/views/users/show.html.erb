<div class="row user-info">
  <div class="small-4 columns profile-pic">
    <%= image_tag @user.image %>
  </div>
  <div class="small-8 columns profile-info">
    <div class="profile-name">
      <h2><%= @user.first_name + " " + @user.second_name %></h2>
      <%= link_to "Edit Profile", edit_user_registration_path  %>
    </div>
    <div class="profile-role">
      <h3><%= @user.role %></h3>
    </div>
    <div class="profile-classes">
      <ul>
        <% @user_cohorts = @user.cohorts.sort_by { |obj| obj.year_group } %>
        <% @user_cohorts.each do |cohort| %>
          <li><%= link_to cohort.name, cohort  %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
