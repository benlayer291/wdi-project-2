<div class="row comment">
  <div class="small-4 columns comments-image">
    <%= image_tag comment.user.try(:image), class: "comment-image" %>
  </div>
  <!-- <li><%= comment.title %></li> -->
  <div class="small-7 columns comment-comment">
    <%= comment.comment %>
  </div>
  <div class="small-1 columns comment-delete">
    <%= link_to 'Delete', comment_path(comment, commentable_type: commentable.class.to_s.underscore, commentable_id: commentable.id), method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>
</div>