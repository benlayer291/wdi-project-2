<div class="row user-info">
  <div class="small-4 large-4 columns profile-pic">
    <%= image_tag @cohort.teacher.image %>
  </div>
  <div class="small-8 large-8 columns profile-info">
    <div>
      <h1><%= @cohort.name %></h1>
    </div>
    <div class="profile-classes">
      <ul>
        <h4><%= "Teacher: " + @cohort.teacher.first_name + " " + @cohort.teacher.second_name %></h4>
      </ul>
    </div>
    <div class="cohort-tools">
      <%= link_to 'Edit Class', edit_cohort_path(@cohort) %>
      <%= link_to 'Add New Resource', new_resource_path %>
    </div>
  </div>
</div>

<div class="cohort-resources">
  <%= render @cohort.resources %>
</div>

